<h1>Listado de artistas</h1>


<a href="/alta" class= "btn btn-primary">Agregar</a>


<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Estado</th>
        <th>Mensaje</th>
        <th>Borrar</th>
        <th>Editar</th>
    </tr>
    {{#each listado}}
        <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.estado}}</td>
            <td>{{this.mensaje}}</td>
            <td><a href="/borrar/{{this._id}}"  class= "btn btn-primary">Borrar</a></td>
            <td><a href="/editar/{{this._id}}"  class= "btn btn-primary">Editar</a></td>
        </tr>
    {{/each}}
</table>