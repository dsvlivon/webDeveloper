{{error}}

<div class="container shadow-lg p-3 mb- bg-white rounded">
  <div class="row">
    <div class="col-md-12">
      <div class="well well-sm">
        <form class="form-horizontal" method="post">
          <fieldset>
              <div class="col-12   ">
                  <span class="d-block p-2 bg-primary text-white text-center " >Listado de emociones</span>
              </div>
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
            
            <div class="form-group">
              <div class="row">
                <div class="col-md-4">
                  <br>
                  <label for="nombre"><a href="#" class="badge badge-pill badge-primary">Primero indicanos tu nombre</a></label>
                  <input type="text" name="nombre" id="nombre" value="{{datos.nombre}}" placeholder="Nombre">
                </div>

                <div class="col-md-8">
                   <a href="#" class="badge badge-pill badge-primary">¿Como se sentis con respecto a la programacion?</a>
                  <select class="form-control" name="estado" id="estado" value="{{datos.estado}}">
                    <option value="">Opción</option>
                    <option value="feliz">Feliz</option>
                    <option value="infeliz">Infeliz</option>
                    <option value="regular">Regular</option>
                  </select>
                </div>
              </div>                    
            </div>

            <div class="col-12">
                <a href="#" class="badge badge-pill badge-primary">Podrías desahogarte un poco mas acá abajo </a>
            </div>
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>

            <div class="form-group">
              <div>
                <textarea class="form-control" id="mensaje" name="mensaje" value="{{datos.mensaje}}" placeholder="¿Como te sentís?" rows="3"></textarea>
              </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>